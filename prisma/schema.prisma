generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(uuid())
  email String  @unique
  name  String?
  todos Todo[]
  Note  Note[]
}

model Todo {
  id          String   @id @default(uuid())
  title       String
  description String
  when        String
  priority    String
  completed   Boolean  @default(false)
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
  createdAt   DateTime @default(now())
}

model Note {
  id       String   @id @default(uuid())
  title    String
  content  String
  color    String
  position String
  author   User     @relation(fields: [authorId], references: [id])
  authorId String
  created  DateTime @default(now())
}
